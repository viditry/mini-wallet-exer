{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "no-console": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "camelcase": "warn",
    "no-unused-vars": "warn",
    "no-param-reassign": "warn",
    "max-len": [
      "warn",
      {
        "code": 80,
        "tabWidth": 2,
        "comments": 80,
        "ignoreComments": false,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ]
  }
}
